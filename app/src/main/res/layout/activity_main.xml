<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hackeru.xo.MainActivity">
    <LinearLayout
        android:id="@+id/linearly"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:weightSum="2">


    </LinearLayout>

<TableLayout
    android:id="@+id/table"
    android:paddingTop="50dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true">
<TableRow
    android:id="@+id/row1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center">

    <ImageView
        android:id="@+id/b1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:tag="0,0"
        android:onClick="onBtClick"/>



    <ImageView
        android:id="@+id/b2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:onClick="onBtClick"
        android:tag="0,1" />

    <ImageView
        android:id="@+id/b3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:tag="0,2"
        android:onClick="onBtClick" />


</TableRow>
    <TableRow
        android:id="@+id/row2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
            android:id="@+id/b4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:tag="1,0"
            android:onClick="onBtClick" />

        <ImageView
            android:id="@+id/b5"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:tag="1,1"
            android:onClick="onBtClick" />

        <ImageView
            android:id="@+id/b6"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:tag="1,2"
            android:onClick="onBtClick" />


    </TableRow>
    <TableRow
        android:id="@+id/row3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
            android:id="@+id/b7"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="onBtClick"
            android:tag="2,0" />

        <ImageView
            android:id="@+id/b8"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="onBtClick"
            android:tag="2,1" />

        <ImageView
            android:id="@+id/b9"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="onBtClick"
            android:tag="2,2" />


    </TableRow>

</TableLayout>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:weightSum="4"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/scorximg"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/xturn"/>
        <TextView
            android:id="@+id/scorexttl"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="0"
            android:textSize="34sp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:gravity="center"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/scoreottl"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="0"
            android:textSize="34sp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:gravity="center"
            android:textStyle="bold"/>
        <ImageView
            android:id="@+id/scoroimg"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/oturn"/>


    </LinearLayout>

</RelativeLayout>
